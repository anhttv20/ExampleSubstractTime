<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:background="#BB87CC55"
        android:textSize="26dp"
        android:gravity="center"
        android:text="Vi du tru 2 time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/t2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btStop"
            android:text="Time stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/colorPrimary"
        android:textSize="22dp"
        android:id="@+id/time1"
        android:hint="Khoáº£ng time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#BB87CC55"
        android:textSize="26dp"
        android:gravity="center"
        android:text="Vi du tru 2 date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="enter start time"
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:hint="enter stop time"
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btTinh"
        android:text="Tinh tru Ngay gio phut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:hint="Khoang Time"
        android:id="@+id/time2"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#BB87CC55"
        android:textSize="26dp"
        android:gravity="center"
        android:text="Vi du bat su kien de trong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/t5"
        android:hint="enter text 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/t6"
        android:hint="enter text 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/t7"
        android:hint="enter text 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>